<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="container d-flex flex-column align-items-center bg-dark text-light"
  >
    <%- include('common/nav') %>
    <div
      class="card w-100 mb-4 bg-secondary text-center"
      style="margin-top: 70px"
    >
      <h5 class="card-header">🙍‍♂️ <%= userInfo.username %></h5>
      <div class="card-body">
        <p class="card-text"><strong>Bio:</strong> <%= userInfo.bio %></p>
        <p class="card-text">
          <strong>Correct Guesses:</strong> <%= userInfo.correct_guesses %>
        </p>
        <p class="card-text">
          <strong>Total Guesses:</strong> <%= userInfo.total_guesses %>
        </p>
        <p class="card-text">
          <strong>Percentage:</strong> <%= userInfo.percentage %>%
        </p>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
