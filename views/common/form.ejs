<div class="text-center">
  <% games.forEach((game, index) => { %> <% let prediction =
  userPredictions.find(pred => pred.game_id === game.id); %>
  <div class="mb-3">
    <label>
      <input type="radio" name="<%= game.id %>" value="<%= game.home_team_id %>"
      <%= prediction?.pick_id === game.home_team_id ? "checked" : "" %> required
      /> <%= game.home_team %>
    </label>
    <label>
      <input type="radio" name="<%= game.id %>" value="<%= game.away_team_id %>"
      <%= prediction?.pick_id === game.away_team_id ? "checked" : "" %> /> <%=
      game.away_team %>
    </label>
    <br />
  </div>
  <% }) %>
  <input class="btn btn-primary btn-sm" type="submit" value="Submit" />
  <% if (userPredictions.length > 0) { %>
  <button
    type="button"
    class="btn btn-danger btn-sm"
    data-bs-toggle="modal"
    data-bs-target="#deleteModal"
  >
    Delete Prediction
  </button>
  <% } %>
</div>
