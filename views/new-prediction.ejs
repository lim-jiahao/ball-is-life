<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="
      container-fluid
      d-flex
      flex-column
      align-items-center
      bg-dark
      text-light
    "
  >
    <%- include('common/nav') %>
    <div class="card bg-secondary mb-3" style="margin-top: 70px">
      <h6 class="card-header text-center"><%= date %></h6>
      <div class="card-body">
        <% if (userPredictions.length === 0) { %>
        <form action="/prediction" method="POST">
          <%- include('common/form') %>
        </form>
        <% } else { %>
        <form
          action="/prediction/<%= userPredictions[0].prediction_id %>?_method=PUT"
          method="POST"
        >
          <%- include('common/form') %>
        </form>
        <% } %>
      </div>
    </div>

    <div
      class="modal fade"
      id="deleteModal"
      tabindex="-1"
      aria-labelledby="deleteModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-dark">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Delete Prediction</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete this prediction?</p>
            <form
              action="/prediction/<%= userPredictions[0]?.prediction_id %>?_method=DELETE"
              method="POST"
            >
              <input
                type="submit"
                value="Yes, I am sure"
                class="btn btn-danger text-light"
              />
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
