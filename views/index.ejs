<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body class="text-center bg-dark text-light">
    <%- include('common/nav', { page: '/' }) %>
    <div
      class="px-md-5 mb-4"
      style="margin-top: 70px"
    >
      <i>When I find myself in times of trouble, Mother Mary comes to me
      <br>
      Speaking words of wisdom: "<strong>Ball is life</strong>"</i>
    </div>
    <div
      class="px-md-5 d-flex align-items-baseline justify-content-center"
    >
      <span class="me-2"><%= date %></span>
      <% if (!hidePredictionButton) { %>
      <form action="/prediction">
        <input
          type="submit"
          value="Make Prediction"
          class="btn btn-warning btn-sm text-light"
        />
      </form>
      <% } %>
    </div>
    <div class="px-md-5 row mx-0">
      <% games.forEach((game, index) => { %>
      <a
        href="/game/<%= game.id %>"
        class="col-4 mb-4 text-light"
        style="text-decoration: none"
      >
        <div class="card bg-secondary <%= game.time ? "bg-success" : "" %>">
          <h5 class="card-header"><%= `Game ${index + 1}` %></h5>
          <div class="card-body">
            <p class="card-text">
              <%= `${game.home_team.full_name} ${game.home_team_score}` %>
            </p>
            <p class="card-text">
              <%= `${game.visitor_team.full_name} ${game.visitor_team_score}` %>
            </p>
            <span class="card-text fw-bold"
              ><%= game.status.toUpperCase() %></span
            >
            <span class="card-text fw-bold"><%= game.time %></span>
          </div>
        </div>
      </a>
      <% }) %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
