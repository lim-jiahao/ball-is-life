<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body class="text-center bg-dark text-light">
    <%- include('common/nav') %>
    <div class="px-md-5 d-flex flex-wrap" style="margin-top: 70px">
      <% games.forEach((game) => { %>
      <div class="card w-50 mb-4 bg-secondary">
        <h5 class="card-header">Game</h5>
        <div class="card-body">
          <p class="card-text">
            <%= `${game.home_team.full_name} ${game.home_team_score}` %>
          </p>
          <p class="card-text">
            <%= `${game.visitor_team.full_name} ${game.visitor_team_score}` %>
          </p>
          <p class="card-text fw-bold">
            <%= game.period === 0 ? 'NOT STARTED' : game.status === 'Final' ?
            'FINAL' : `Q${game.period} ${game.time}` %>
          </p>
        </div>
      </div>
      <% }) %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
