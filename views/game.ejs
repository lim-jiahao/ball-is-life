<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="container d-flex flex-column align-items-center bg-dark text-light"
  >
    <%- include('common/nav') %>
    <div
      class="card w-100 mb-4 bg-secondary text-center"
      style="margin-top: 70px"
    >
      <h5 class="card-header">Information</h5>
      <div class="card-body">
        <p class="card-text">
          <%= `${game.home_team.full_name} ${game.home_team_score}` %>
        </p>
        <p class="card-text">
          <%= `${game.visitor_team.full_name} ${game.visitor_team_score}` %>
        </p>
        <span class="card-text fw-bold"><%= game.status.toUpperCase() %></span>
        <span class="card-text fw-bold"><%= game.time %></span>
      </div>
    </div>
    <% if (comments.length > 0) { %>
    <h5 class="align-self-start"><%= comments.length %> comments</h5>
    <% } %> <% comments.forEach((comment, index) => { %>
    <div class="card w-100 mb-4 bg-secondary">
      <h6 class="card-header">
        üôç‚Äç‚ôÇÔ∏è <a href="/user/<%= comment.user_id %>"><%= comment.username %></a> |
        <%= comment.created_at %>
      </h6>
      <div class="card-body">
        <p class="card-text"><%= comment.comment %></p>
      </div>
    </div>
    <% }) %>
    <form action="/game/<%= game.id %>/comment" method="POST">
      <div class="mb-1">
        <label for="comment">Leave a comment:</label><br />
        <textarea name="comment" rows="4" cols="75" required></textarea>
      </div>
      <input type="submit" value="Submit" />
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
