<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="container d-flex flex-column align-items-center bg-dark text-light"
  >
    <%- include('common/nav') %>
    <div
      class="card w-100 mb-4 bg-secondary text-center"
      style="margin-top: 70px"
    >
      <h5 class="card-header">Information</h5>
      <div class="card-body">
        <p class="card-text">
          <%= `${game.home_team.full_name} ${game.home_team_score}` %>
        </p>
        <p class="card-text">
          <%= `${game.visitor_team.full_name} ${game.visitor_team_score}` %>
        </p>
        <span class="card-text fw-bold"><%= game.status.toUpperCase() %></span>
        <span class="card-text fw-bold"><%= game.time %></span>
      </div>
    </div>
    <% if (comments.length > 0) { %>
    <h5 class="align-self-start"><%= comments.length %> comments</h5>
    <% } %> <% comments.forEach((comment, index) => { %>
    <div class="card w-100 mb-4 bg-secondary">
      <h6 class="card-header">
        üôç‚Äç‚ôÇÔ∏è <a href="/user/<%= comment.user_id %>"><%= comment.username %></a> |
        <%= comment.created_at %>
      </h6>
      <div class="card-body">
        <p class="card-text"><%= comment.comment %></p>
        <% if (comment.username === user.userName) { %>
        <span
          class="modal-trigger text-info"
          style="cursor: pointer"
          data-id="<%= comment.id %>"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Edit
        </span>
        <% } %>
      </div>
    </div>
    <% }) %>
    <form action="/game/<%= game.id %>/comment" method="POST">
      <div class="mb-1">
        <label for="comment">Leave a comment:</label><br />
        <textarea name="comment" rows="4" cols="75" required></textarea>
      </div>
      <input type="submit" value="Submit" />
    </form>

    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-dark" id="exampleModalLabel">
              Edit Comment
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              id="comment-form"
              action="/game/<%= game.id %>/comment"
              method="POST"
            >
              <textarea
                id="modal-textarea"
                style="box-sizing: border-box; width: 100%"
                rows="4"
                name="comment"
                required
              ></textarea>
              <input type="submit" value="Submit" />
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>

    <script>
      $(".modal-trigger").on("click", function () {
        const comment = $(this).prev().text();
        const id = $(this).data("id");
        const curFormAction = $("#comment-form").attr("action");
        $("#comment-form").attr("action", curFormAction + `/${id}?_method=PUT`);
        $(".modal-body #modal-textarea").val(comment);
      });
    </script>
  </body>
</html>
